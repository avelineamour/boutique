<div class="order-main-wrapper">


<div class="order-main">

<div class="order-address">

  <h3>Shipping Address</h3>

<%= form_for [current_user, @address], url: user_orders_path do |f| %>

  <div class="order-name">
    <%= f.text_field :first_name, value: "First Name" %>

    <%= f.text_field :last_name, value: "Last Name" %>
  </div>


  <%= f.text_field :company, value: "Company (Optional)" %><br />

  <%= f.text_field :address, value: "Address" %><br />

  <%= f.text_field :apt_or_suite, value: "Apt/Suite" %><br />

  <%= f.text_field :city, value: "City" %><br />

  <%= f.text_field :state, value: "State" %><br />

  <%= f.text_field :zip_code, value: "Zip Code" %><br />

  <%= f.text_field :phone_number, value: "Phone Number(Optional)" %></p><br />

  <%= form_for [current_user, @order] do |f| %>
    <div class="order-save-address">
      <%= f.label :save_address, "Would you like to save this address for future orders?" %>
      <%= f.check_box :save_address %>
    </div>
  <%end%>

  <%= f.submit "Submit Order" %>
<%end%>
</div>

<div class="order-items">

    <% @cart_items.each do |item| %>
      <div class="order-item">
        <% @item = Item.find(item["item_id"])%>
        <div class="order-item-image"><%= image_tag @item.picture%></div>
        <p>
          <%= @item.name %>
          <%= number_to_currency(@item.price) %>
          <% cart_item = CartItem.find_by(item_id: @item.id) %>
          <% if cart_item.quantity > 1%>
          <%="x " + "#{cart_item.quantity}"%>
          <%end%>
        </p>
      </div>
    <%end%>



  <div class="order-subtotal">
    <h3>Subtotal: <%= number_to_currency(@total) %></h3>

  </div>
</div>


</div>
</div>
